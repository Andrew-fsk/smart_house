extends base

block content
    .blog-page.padding-top
        .container
            ul(class="breadcrumbs" itemscope itemtype="http://schema.org/BreadcrumbList")
                li(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
                    a(href="./index.html" itemprop="item") Главная
                li(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
                    span(href="./index.html" itemprop="item") Блог
            h1 Блог
            .blog-categories
                each value in ['Акции', 'Новости','Новинки','Другое']
                    a(href="#").blog-category=value
            .blog-list
                each value in Array(6)
                    .blog-item.animated-block
                        a(href='../blog-item-page.html').blog-image.object-fit
                            img(src='../img/project.png')
                            .date 25 февраля 2021
                        a(href='../blog-item-page.html').blog-title Особенности умного дома SmartHouse и его преимущества
            .blog-bottom.animated-block
                .ac-jc
                    a(href='#').load-more Показать ещё
                .ac-jc
                    ul.pagination
                        li.prev
                            a(href='#')
                        li.pagination-item.active
                            a(href='#') 1
                        li.pagination-item
                            a(href='#') 2
                        li.pagination-item
                            a(href='#') 3
                        li.next
                            a(href='#')
